<div class="signup_block">
    <form action="/api/register" method="POST">
        <div class="signup_flex">
            <label for="email">Email</label>
            <input class="fields" id="email" type="text" name="email">
            <label for="pass">Password</label>
            <input class="fields" type="password" name="password" id="pass">
            <label for="nickname">Name</label>
            <input class="fields" type="text" name="name" id="name">
            <input class="submit_button" type="submit" name="submit" value="Sign Up">
        </div>
    </form>
</div>